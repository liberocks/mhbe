{
  "name": "remedika-core-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "Copyright remedika",
  "scripts": {
    "prebuild": "rimraf dist && echo false > .buildstatus",
    "postbuild": "echo true > .buildstatus",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "rimraf dist && nest start --watch",
    "start:debug": "rimraf dist && nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "sls:local": "rimraf dist && nest build && IS_OFFLINE=true sls offline start --skipCacheInvalidation",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "nest:format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --detectOpenHandles --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:badges": "yarn run test:cov && jest-coverage-badges"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/mongoose": "^7.2.4",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.4",
    "express": "^4.17.1",
    "jose": "3",
    "lodash": "^4.17.21",
    "mailgun-js": "^0.22.0",
    "mongoose": "^5.12.3",
    "mongoose-paginate-v2": "^1.3.17",
    "nanoid": "^3.1.22",
    "nestjs-agenda": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.7",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/aws-lambda": "^8.10.73",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/mailgun-js": "^0.22.11",
    "@types/mongoose": "^5.10.4",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "26.6.3",
    "jest-coverage-badges": "^1.1.2",
    "mongodb-memory-server": "^6.9.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "26.5.4",
    "ts-loader": "^8.1.0",
    "ts-node": "9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^common/(.*)$": "<rootDir>/common/$1",
      "^domains/(.*)$": "<rootDir>/domains/$1",
      "^constants/(.*)$": "<rootDir>/constants/$1",
      "^model/(.*)$": "<rootDir>/model/$1",
      "^repository/(.*)$": "<rootDir>/repository/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  }
}
